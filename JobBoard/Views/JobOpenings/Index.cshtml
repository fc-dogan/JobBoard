@using JobBoard.Models;

<h1>Job Board</h1>
<ul>
@if (Model.Count == 0)
{
  <p>There are no jobs in the list.</p>
}
</ul>
<ul>
  @foreach (JobOpening item in Model)
  {
    <li>@item.Title</li>
    <p>@item.Description</p>
    <p>Contact Info:</p>
    <p>@item.ContactInfo.Name</p>
    <p>@item.ContactInfo.Email</p>
    <p>@item.ContactInfo.Phone</p>
  }
</ul>

<a href="/jobopenings/new">Add a new item.</a>