<form action="/jobopenings" method="post">
  <label for="title">Add a job title</label>
  <input id="title" name="title" type="text">
  <label for="description">Add a new job description</label>
  <input id="description" name="description" type="text">
  <label for="email">Add a contact email</label>
  <input id="email" name="email" type="text">
  
  <label for="name">Add a contact name</label>
  <input id="name" name="name" type="text">
  
  <label for="phone">Add a contact phone</label>
  <input id="phone" name="phone" type="text">
  
  <button type="submit">Submit</button>
</form>